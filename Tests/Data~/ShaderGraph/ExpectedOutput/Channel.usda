#usda 1.0
(
    metersPerUnit = 1
    upAxis = "Y"
)

def "MaterialX"
{
    def "Materials"
    {
        def Material "USD_Channel"
        {

            token outputs:mtlx:surface.connect = <realitykit_unlit.outputs:out>
            token outputs:realitykit:vertex.connect = <GeometryModifier.outputs:out>

            def Shader "realitykit_unlit"
            {
                uniform token info:id = "ND_realitykit_unlit_surfaceshader"
                bool inputs:applyPostProcessToneMap = 0
                color3f inputs:color.connect = <../_7.outputs:out>
                token outputs:out
            }

            def Shader "GeometryModifier"
            {
                uniform token info:id = "ND_realitykit_geometrymodifier_vertexshader"
                token outputs:out
            }

            def Shader "_7"
            {
                uniform token info:id = "ND_swizzle_vector4_color3"
                float4 inputs:in.connect = <../_1.outputs:out>
                string inputs:channels = "xyz"
                color3f outputs:out
            }

            def Shader "_1"
            {
                uniform token info:id = "ND_multiply_vector4"
                float4 inputs:in1.connect = <../_2.outputs:out>
                float4 inputs:in2 = (1, -1, 1, 1)
                float4 outputs:out
            }

            def Shader "_2"
            {
                uniform token info:id = "ND_dot_vector4"
                float4 inputs:in.connect = <../_6.outputs:out>
                float4 outputs:out
            }

            def Shader "_6"
            {
                uniform token info:id = "ND_swizzle_color4_vector4"
                color4f inputs:in.connect = <../_3.outputs:out>
                string inputs:channels = "rgba"
                float4 outputs:out
            }

            def Shader "_3"
            {
                uniform token info:id = "ND_constant_color4"
                color4f inputs:value = (1, 1, 1, 0)
                color4f outputs:out
            }
        }
    }
}
